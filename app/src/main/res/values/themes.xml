<resources>
    <!-- Base application theme -->
    <style name="Theme.TechTangle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorPrimaryText</item>

        <!-- Error color -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnPrimary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/colorSecondaryText</item>
<!--        <item name="android:navigationBarDividerColor">@color/colorSecondaryText</item>-->

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
</resources>
